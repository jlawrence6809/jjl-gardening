{
  "private": true,
  "name": "jeremy_iot",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:ts && npm run build:preact",
    "build:preact": "preact build --no-sw --no-esm --no-sw --no-json --no-prerender --no-inline-css --no-prerenderUrls",
    "build:ts": "tsc",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "antlr": "antlr -Dlanguage=JavaScript HomeAutomation.g4",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:src": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,json}\""
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^7.17.0",
    "eslint-config-preact": "^1.1.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "mime-types": "^2.1.29",
    "preact-cli": "^3.0.0",
    "prettier": "^3.6.2",
    "sirv-cli": "^1.0.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "preact": "^10.1.0",
    "preact-render-to-string": "^5.1.2"
  }
}
