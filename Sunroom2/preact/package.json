{
  "private": true,
  "name": "jeremy_iot",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:ts && npm run build:esp32",
    "build:esp32": "preact build --no-sw --no-esm --no-json --no-prerender --no-inline-css --no-prerenderUrls",
    "build:esp32:brotli": "BROTLI=true npm run build:esp32",
    "build:esp32:analyze": "ANALYZE=true npm run build:esp32",
    "build:ts": "tsc",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "antlr": "antlr -Dlanguage=JavaScript HomeAutomation.g4",
    "size-check": "ls -la build/*.{js,css,html} | awk '{sum+=$5} END {print \"Total size:\", sum, \"bytes\"}'",
    "analyze": "webpack-bundle-analyzer build/static/js/*.js"
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^7.17.0",
    "eslint-config-preact": "^1.1.3",
    "mime-types": "^2.1.29",
    "preact-cli": "^3.0.0",
    "sirv-cli": "^1.0.3",
    "typescript": "^5.4.2",
    "terser-webpack-plugin": "^5.3.10",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "dependencies": {
    "preact": "^10.1.0",
    "preact-render-to-string": "^5.1.2"
  }
}
